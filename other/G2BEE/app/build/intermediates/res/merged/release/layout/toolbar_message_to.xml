<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_text_message_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:hint="@string/send_to"
        android:textSize="16sp"
        android:textColorHint="@color/white_100"
        android:textColor="@color/white_100"
        android:digits="1234567890AaBbCcDdEeFf"
        android:maxLines="1"
        android:maxLength="16"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="@dimen/forward_button_diameter"
            android:layout_height="@dimen/forward_button_diameter"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:contentDescription="@string/button_forward_desc"
            android:src="@drawable/ic_action_forward"
            android:tint="@color/white_100"
            android:background="@drawable/button_ripple"
            android:scaleType="center"
            android:visibility="invisible"/>
    </FrameLayout>

</RelativeLayout>
