<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="@dimen/item_padding"
                android:paddingEnd="@dimen/item_padding"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/avatar_text"
        android:layout_width="@dimen/avatar_diameter"
        android:layout_height="@dimen/avatar_diameter"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/avatar"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/hint_node_identifier"
        android:layout_toEndOf="@+id/avatar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textColor="@color/black_87"/>

    <TextView
        android:id="@+id/hint_xbee_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/avatar_text"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/hint_node_identifier"/>

</RelativeLayout>