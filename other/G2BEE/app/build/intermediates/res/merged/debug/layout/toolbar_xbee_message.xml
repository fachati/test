<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/label_ascii"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white_100"/>

    <TextView
        android:id="@+id/label_ascii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/switch_display"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="@string/label_ascii"
        android:textColor="@color/white_100"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/label_ascii_on_off"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/switch_display"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/label_ascii_off"
        android:textColor="@color/white_100"
        android:textSize="16sp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>
