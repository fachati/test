<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingEnd="@dimen/card_edge_padding_horizontal"
              android:paddingStart="@dimen/card_edge_padding_horizontal">

    <LinearLayout android:id="@+id/layout_usb_device"
                  android:layout_width="match_parent"
                  android:layout_height="72dp"
                  android:layout_marginTop="8dp"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:orientation="vertical">

        <TextView android:id="@+id/label_usb_device"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_usb_device"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"/>

        <TextView android:id="@+id/usb_device"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/summary_no_usb_device"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>

    </LinearLayout>

    <RelativeLayout android:id="@+id/layout_use_device"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

        <TextView android:id="@+id/label_use_device"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_use_device"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"
                  tools:ignore="RelativeOverlap"/>

        <TextView android:id="@+id/summary_use_device"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/label_use_device"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/summary_use_device"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>

        <CheckBox android:id="@+id/use_device"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <TextView android:id="@+id/label_serial_settings"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="16dp"
              android:fontFamily="sans-serif-medium"
              android:text="@string/title_serial_settings"
              android:textColor="@color/blue_500"
              android:textSize="14sp"/>

    <LinearLayout android:id="@+id/layout_baud_rate"
                  android:layout_width="match_parent"
                  android:layout_height="72dp"
                  android:layout_marginTop="8dp"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:orientation="vertical">

        <TextView android:id="@+id/label_baud_rate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_baud_rate"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"/>

        <TextView android:id="@+id/baud_rate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/default_baud_rate"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/highlight"/>

    <LinearLayout android:id="@+id/layout_data_bits"
                  android:layout_width="match_parent"
                  android:layout_height="72dp"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:orientation="vertical">

        <TextView android:id="@+id/label_data_bits"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_data_bits"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"/>

        <TextView android:id="@+id/data_bits"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/default_data_bits"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/highlight"/>

    <LinearLayout android:id="@+id/layout_stop_bits"
                  android:layout_width="match_parent"
                  android:layout_height="72dp"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:orientation="vertical">

        <TextView android:id="@+id/label_stop_bits"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_stop_bits"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"/>

        <TextView android:id="@+id/stop_bits"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/default_stop_bits"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/highlight"/>

    <LinearLayout android:id="@+id/layout_parity"
                  android:layout_width="match_parent"
                  android:layout_height="72dp"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:orientation="vertical">

        <TextView android:id="@+id/label_parity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="@string/title_parity"
                  android:textColor="@color/black_87"
                  android:textSize="16sp"/>

        <TextView android:id="@+id/parity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:layout_marginStart="16dp"
                  android:text="@string/default_parity"
                  android:textColor="@color/black_54"
                  android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
